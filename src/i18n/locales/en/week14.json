    "principles": {
      "title": "WCAG 2.1 Core 4 Principles",
      "label": "POUR Principles",
      "perceivable": {
        "description": "Content must be perceivable by all users",
        "items": [
          "Provide alternative text (images, videos, etc.)",
          "Maintain contrast ratio of 4.5:1 or higher",
          "Text must be selectable and zoomable",
          "Provide captions and audio descriptions"
        ]
      },
      "operable": {
        "description": "UI components and navigation must be operable",
        "items": [
          "All features accessible via keyboard",
          "Focus visible with natural flow",
          "Provide sufficient time (adjustable time limits)",
          "No seizure-inducing content (flashing)"
        ]
      },
      "understandable": {
        "description": "Information and UI operation must be understandable",
        "items": [
          "Provide clear form labels",
          "Error messages must be specific",
          "Consistent navigation structure",
          "Predictable behavior"
        ]
      },
      "robust": {
        "description": "Must be interpretable by various user agents",
        "items": [
          "Recognizable by assistive technologies (Screen Readers)",
          "Semantic tags required",
          "Use ARIA only when necessary",
          "Standards-compliant markup"
        ]
      }
    },
