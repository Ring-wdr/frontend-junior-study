  "aria": {
    "badge": "WAI-ARIA",
    "title": "Proper Use of ARIA",
    "description": "Use HTML first, ARIA supplements missing functionality",
    "firstRule": {
      "title": "First Rule of ARIA",
      "infoTitle": "First Rule of ARIA",
      "quote": "\"If you don't need to use ARIA, don't use it.\"",
      "explanation": "Native HTML elements already provide accessibility. Use ARIA only for features that cannot be expressed in HTML (e.g., custom components). Misusing ARIA worsens accessibility."
    },
    "commonAttributes": {
      "title": "Common ARIA Attributes",
      "attributes": [
        {
          "attr": "role",
          "desc": "Define element's role",
          "example": "role=\"dialog\", role=\"alert\", role=\"tablist\""
        },
        {
          "attr": "aria-label",
          "desc": "Provide accessible name",
          "example": "aria-label=\"Close menu\""
        },
        {
          "attr": "aria-labelledby",
          "desc": "Reference name by another element's ID",
          "example": "aria-labelledby=\"modal-title\""
        },
        {
          "attr": "aria-describedby",
          "desc": "Connect additional description",
          "example": "aria-describedby=\"password-hint\""
        },
        {
          "attr": "aria-expanded",
          "desc": "Expanded/collapsed state",
          "example": "aria-expanded=\"true\""
        },
        {
          "attr": "aria-live",
          "desc": "Dynamic content announcement",
          "example": "aria-live=\"polite\""
        }
      ]
    },
    "ariaExpanded": {
      "title": "Interactive: aria-expanded",
      "label": "Accordion Pattern",
      "buttonText": "What is aria-expanded?",
      "explanation": "aria-expanded tells screen readers whether the current element is expanded or collapsed. Essential for toggle buttons, accordions, dropdown menus, etc."
